<article class="mb-5">
    <div class="">
        <div class="">
            {% if article.featuredImage %}
            <a href="{{ path('article_show', {'slug': article.slug}) }}">
                <img src="/media/{{ article.featuredImage.filename }}" alt="{{ article.featuredImage.altText }}" loading="lazy" width="350" height="205" >
            </a>
            {% endif %}
        </div>
        <div class="">
            <h2 class="article-title">
                <a href="{{ path('article_show', {'slug': article.slug}) }}" class="text-decoration-none">{{ article.title }}</a>
            </h2>
            <p>
                {{ article.createdAt|date('d M Y') }} / <b>{{ article.categories|categoriesToString|raw }}</b>
            </p>
            {{ article.featuredText ?: article.content|striptags|slice(0, 130) ~ '...' }}
        </div>
    </div>
</article>
